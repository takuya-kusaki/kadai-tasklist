<% if logged_in? %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>タスク名</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
    <%= link_to "新規タスクの投稿", new_task_path, class: "btn btn-primary" %>
  </tbody>
</table>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>タスクリスト</h1>
    <%= link_to 'ユーザ登録', signup_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>

